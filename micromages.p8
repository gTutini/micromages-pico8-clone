--update and draw
function _update()
	posx = flr(x/8)
	posy = flr(y/8)
	
	control()
	
	dy+=0.9
end


function _draw()
	cls()
	spr(frm, x, y,1,1,spr_flip)
	animate()
	map(0, 0, 0, 0, 16, 16)
	print("x:"..posx.." y:"..posy,0)
	print("gravity:"..flr(dy), 0, 8)
end
